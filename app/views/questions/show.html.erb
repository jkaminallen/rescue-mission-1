<h1> <%= @question.title %> </h1>
<body>
  <p> <%= @question.description %></p>
  <%= link_to "Edit", edit_question_path(@question) %>
  <%= link_to "Destroy", question_path(@question),
          method: :delete,
          data: { confirm: 'Are you sure?'}%>
  <%= render "answerform" %>
  <ul>
    <% @answers.each do |a|  %>
      <li><%= a.description %></li>
    <% end %>
  </ul>
</body>
